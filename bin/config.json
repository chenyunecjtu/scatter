{
  "server": {
    "endpoint": "/chat",
    "address": "*",
    "port": 8085,
    "workers": 8,
    "secure": {
      "crtPath": "../certs/debug.crt",
      "keyPath": "../certs/pdebug.key"
    },
    "tmpDir": "/tmp",
    "idleTimeoutSeconds": 600
  },
  "restApi": {
    "enabled": true,
    "address": "*",
    "port": 8082,
    "auth": {
      "basic": {
        "user": "chat_user",
        "password": "chat_password"
      }
    }
  },
  "chat": {
    "message": {
      "maxSize": "10M",
      "enableDeliveryStatus": false
    }
  },
  "event": {
    "enabled": true,
    "enableRetry": true,
    "retryIntervalSeconds": 10,
    "retryCount": 3,
    "targets": [
      {
        "type": "postback",
        "url": "http://api.dev.mdsclub.ru/v1/chat/send",
        "connectionTimeoutSeconds": 10,
        "auth": {
          "type": "header",
          "name": "X-Api-Token",
          "value": "7ppOeHwnA7PMJyl9ciZY97UTBBDqCEME"
        }
      }
    ]
  }
}
